{
    "name": "aw-watcher-vscode",
    "displayName": "aw-watcher-vscode",
    "description": "Editor watcher for ActivityWatch, the free and open-source automated time tracker.",
    "version": "0.5.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/ActivityWatch/aw-watcher-vscode"
    },
    "publisher": "activitywatch",
    "author": "ActivityWatch Developers",
    "bugs": {
        "url": "https://github.com/ActivityWatch/aw-watcher-vscode/issues"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "multi-root ready"
    ],
    "icon": "media/logo/logo.png",
    "activationEvents": [
        "*"
    ],
    "extensionKind": [
        "ui"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.reload",
                "title": "Reload ActivityWatch"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "aw-watcher-vscode extension configuration",
            "properties": {
                "aw-watcher-vscode.maxHeartbeatsPerSec": {
                    "type": "number",
                    "default": 1,
                    "description": "Controls the maximum number of hearbeats sent per second."
                },
                "aw-watcher-vscode.baseURL": {
                    "type": "string",
                    "default": "",
                    "description": "Base URL of the ActivityWatch server. If set, this overrides host and port. Example: 'http://192.168.1.3:5600'"
                },
                "aw-watcher-vscode.host": {
                    "type": "string",
                    "default": "127.0.0.1",
                    "description": "Host of the ActivityWatch server."
                },
                "aw-watcher-vscode.port": {
                    "type": "number",
                    "default": 5600,
                    "description": "Port of the ActivityWatch server."
                },
                "aw-watcher-vscode.testing": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable testing mode. For development use only."
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "test:mocha": "npm run compile && node ./node_modules/mocha/bin/mocha ./out/test/extension.test.js",
        "vscode:prepublish": "npm run compile"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.10.11",
        "mocha": "^8.2.1",
        "tslint": "^5.20.1",
        "typescript": "^4.1.3",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "axios": "^0.21.1"
    }
}
